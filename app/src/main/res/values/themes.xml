<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Cnexiachallenge" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/orange</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Header Title. -->
    <style name="HeaderTitleStyle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/space</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/header_title_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Header SubTitle. -->
    <style name="HeaderSubtitleStyle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/space</item>
        <item name="android:layout_marginBottom">@dimen/space</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/header_subtitle_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Car Item. -->
    <style name="CarNameStyle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CarPriceStyle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CarCardStyle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/light_grey</item>
        <item name="android:padding">@dimen/space</item>
        <item name="android:layout_margin">@dimen/space</item>
    </style>

</resources>